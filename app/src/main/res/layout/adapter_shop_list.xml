<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:id="@+id/iv_shopBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/veg"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bg">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/clg_logo"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder"
                    app:civ_border_color="#0097A7"
                    android:layout_marginStart="3dp"
                    app:civ_border_width="1dp"/>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/clg_logo"
                    android:background="@android:color/transparent">

                <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        tools:text="Karun jeneral store"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded"/>


                <RelativeLayout
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_shop_name"
                        android:background="@android:color/transparent">

                    <ImageView
                            android:id="@+id/loc"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/ic_location"/>

                    <TextView
                            android:paddingStart="@dimen/_5ssp"
                            android:layout_marginStart="2dp"
                            android:id="@+id/tv_location_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/loc"
                            android:gravity="left"
                            tools:text="Pune"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_8ssp"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded,RtlSymmetry"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>


</android.support.v7.widget.CardView>