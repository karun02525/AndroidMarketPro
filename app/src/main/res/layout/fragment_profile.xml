<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_color_bottom_round">


        <LinearLayout
                android:id="@+id/ll_image_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user_img"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="centerCrop"
                    app:civ_border_color="@color/yellow"
                    tools:src="@drawable/avatar"
                    app:civ_border_width="5dp"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_image_main"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    tools:text="Karun Kumar"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_20sdp"/>

            <TextView
                    android:id="@+id/txt_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="Male"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="City"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Mobile No"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/txt_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="Pusauli"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp"/>

                <TextView
                        android:id="@+id/txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        tools:text="8920183373"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_round_stroke"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_15sdp">

                    <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_change_password"/>

                    <TextView
                                android:id="@+id/btnChange"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Password"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_marginStart="@dimen/_5sdp"
                        android:id="@+id/ll_chnage_lang"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_round_stroke"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_15sdp">

                    <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_worlwide_langauge"/>

                    <TextView
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Language"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_round_stroke"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_15sdp">

                    <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_information"/>

                    <TextView
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Help"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_marginStart="@dimen/_5sdp"
                        android:id="@+id/ll_vender"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_round_stroke"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_15sdp">

                    <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_shopping_bag_active"/>

                    <TextView
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/for_vender"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_round_stroke"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_15sdp">

                    <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_privacy_policy"/>

                    <TextView
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Privecy policy"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_marginStart="@dimen/_5sdp"
                        android:id="@+id/logout"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_round_stroke"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_15sdp">

                    <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_logout"/>

                    <TextView
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Log Out"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>