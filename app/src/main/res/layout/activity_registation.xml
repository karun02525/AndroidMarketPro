<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_half_circle" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:src="@drawable/ic_logo_login1" />


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:text="Welcome to Digital Pusauli"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp" />


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:padding="@dimen/_2sdp"
                        android:text="Gender"
                        android:textSize="@dimen/_13sdp" />

                <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                    <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Male" />

                    <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:checked="false"
                            android:text="Female" />


                </RadioGroup>


                <android.support.design.widget.TextInputLayout
                        style="@style/edit_text"
                        android:layout_marginTop="@dimen/_5sdp">

                    <EditText
                            android:id="@+id/edit_fname"
                            style="@style/edit_text"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="Enter First Name"
                            android:inputType="text"
                            android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        style="@style/edit_text"
                        android:layout_marginTop="@dimen/_5sdp">

                    <EditText
                            android:id="@+id/edit_lname"
                            style="@style/edit_text"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="Enter Last Name"
                            android:inputType="text"
                            android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        style="@style/edit_text"
                        android:layout_marginTop="@dimen/_10sdp">

                    <EditText
                            android:id="@+id/edit_mobile"
                            style="@style/edit_text"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="Enter Mobile No"
                            android:inputType="number"
                            android:maxLength="10"
                            android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        style="@style/edit_text"
                        android:layout_marginTop="@dimen/_10sdp">

                    <EditText
                            android:id="@+id/edit_email"
                            style="@style/edit_text"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="Enter email id (optional)"
                            android:inputType="textEmailAddress"
                            android:maxLength="30"
                            android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        style="@style/edit_text"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:passwordToggleEnabled="true">

                    <EditText
                            android:id="@+id/edit_password"
                            style="@style/edit_text"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="Enter Password"
                            android:inputType="textPassword"
                            android:maxLength="15"
                            android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        style="@style/edit_text"
                        android:layout_marginTop="@dimen/_10sdp">

                    <EditText
                            android:id="@+id/edit_city"
                            style="@style/edit_text"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="Enter City/Village"
                            android:inputType="text"
                            android:maxLength="20"
                            android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <Button
                        android:id="@+id/btnSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="#565"
                        android:text="SignUp"
                        android:textColor="@android:color/white" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="OR" />

                <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="#565"
                        android:onClick="btnLogin"
                        android:text="Login"
                        android:textColor="@android:color/white" />


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
